{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
